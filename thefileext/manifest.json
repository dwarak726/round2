{
    "manifest_version": 3,
    "name": "Leaderboard Extension",
    "version": "1.0",
    "description": "Displays a real-time leaderboard from Firebase",
    "permissions": ["storage"],
    "action": {
        "default_popup": "index.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    }
}
